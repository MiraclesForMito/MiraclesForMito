@using MiraclesForMito.Models;

@model IEnumerable<BlogPost>

@{
	ViewBag.Title = string.Format("Uploading XML Results");

	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row main-page-section">

	<div class="col-md-12 col-lg-10 col-md-offset-0 col-lg-offset-1">
		
			@if (Model == null || Model.Count()==0)
			{
				<h3>The upload didn't work.</h3>
			}
			else
			{
				<h3> The upload worked. @Model.Count() </h3>
				<h2> @Model.FirstOrDefault().Title </h2>
				@Html.Partial("BlogPostsPaginationBody", new BlogPaginationModel { SortedAndFilteredPosts = Model.AsQueryable() });

			}

	</div>

</div>


@section scripts
{
	<script type="text/javascript">
		$(function ()
		{
		});
	</script>
}