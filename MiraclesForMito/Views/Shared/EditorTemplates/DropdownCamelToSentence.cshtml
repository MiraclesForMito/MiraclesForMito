@model Enum
@using MiraclesForMito.Utilities

@*
Listing 22-19 for a specific kind of Enum
Listing 22-20 for any kind of Enum, esp value vs text
*@

@Html.DropDownListFor(m=>m, Enum.GetValues(Model.GetType())
	.Cast<Enum>()
	.Select(m=> {  
		string enumVal = Enum.GetName(Model.GetType(), m); 
		return new SelectListItem {  
			Selected = (Model.ToString() == enumVal),  
			Text = Util.CamelCaseToSentenceCase(enumVal),  
			Value = enumVal }; } ))